<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar" />

    <LinearLayout
        android:background="#F1F1F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlt_device_manager"
            style="@style/MeLayoutStyle">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_device_manager" />

            <TextView
                style="@style/IMTbleLine_TextName"
                android:layout_centerVertical="true"
                android:text="设备管理" />

            <ImageView
                style="@style/IMTbleLine_ArrowImg.Me"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/me_chevron_right"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlt_safe_center"
            style="@style/MeLayoutStyle">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_account_safe" />

            <TextView

                style="@style/IMTbleLine_TextName"
                android:layout_centerVertical="true"
                android:text="安全中心" />

            <ImageView
                style="@style/IMTbleLine_ArrowImg.Me"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/me_chevron_right"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>