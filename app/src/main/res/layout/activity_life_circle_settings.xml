<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <include layout="@layout/a_view_actionbar" />

    <RelativeLayout
        style="@style/IMTbleLine_UP"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvBanToFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/ban_to_male"
            android:textColor="@color/black"
            android:textSize="@dimen/one_level_title" />

        <com.ktw.bitbit.view.SwitchButton
            android:id="@+id/sbBanToFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_background="@color/app_white"
            app:sb_checked_color="@color/main_color"
            app:sb_effect_duration="100"
            app:sb_shadow_radius="4dp"
            app:sb_show_indicator="false" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/divider_margin_left" />

    <RelativeLayout
        style="@style/IMTbleLine_UP"
        android:background="@color/white"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvBanFromFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/ban_from_male"
            android:textColor="@color/black"
            android:textSize="@dimen/one_level_title" />

        <com.ktw.bitbit.view.SwitchButton
            android:id="@+id/sbBanFromFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:sb_background="@color/app_white"
            app:sb_checked_color="@color/main_color"
            app:sb_effect_duration="100"
            app:sb_shadow_radius="4dp"
            app:sb_show_indicator="false" />

    </RelativeLayout>

</LinearLayout>
