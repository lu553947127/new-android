        <com.ktw.fly.view.HorizontalListView xmlns:widget="http://schemas.android.com/apk/res-auto"
            android:id="@+id/horizontal_list_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tv_instant_popuwindow_title"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginTop="@dimen/dp5"
            android:layout_marginRight="7dp"
            android:divider="@color/transparent"
            widget:dividerWidth="5dp" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/horizontal_list_view"
            android:layout_marginTop="20dp"
            android:background="@color/pop_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view">

            <TextView
                android:id="@+id/btn_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_select_frame_left_selector_background_ripple"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="@dimen/one_level_title" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/pop_line" />

            <TextView
                android:id="@+id/btn_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_select_frame_right_selector_background_ripple"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/main_color"
                android:textSize="@dimen/one_level_title" />

        </LinearLayout>

