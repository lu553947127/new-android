<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:background="#f1f1f1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_tab_1"
            style="@style/SkMainTabStyle"
            android:drawableTop="@drawable/tab_chat_normal_bg"
            android:text="@string/message" />

        <RadioButton
            android:id="@+id/rb_tab_2"
            style="@style/SkMainTabStyle"
            android:drawableTop="@drawable/tab_group_normal_bg"
            android:text="@string/contacts" />

        <RadioButton
            android:id="@+id/rb_tab_nav1"
            style="@style/SkMainTabStyle"
            android:drawableTop="@drawable/tab_find_normal_bg"
            android:text="导航1"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rb_tab_nav2"
            style="@style/SkMainTabStyle"
            android:drawableTop="@drawable/tab_find_normal_bg"
            android:text="导航2"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rb_tab_3"
            style="@style/SkMainTabStyle"
            android:drawableTop="@drawable/tab_find_normal_bg"
            android:text="发现" />

<!--        <RadioButton-->
<!--            android:id="@+id/rb_tab_3"-->
<!--            style="@style/SkMainTabStyle"-->
<!--            android:drawableTop="@drawable/tab_dapp_normal_bg"-->
<!--            android:text="DApps" />-->


        <RadioButton
            android:id="@+id/rb_tab_wallet"
            style="@style/SkMainTabStyle"
            android:visibility="gone"
            android:drawableTop="@drawable/tab_wallet_normal_bg"
            android:text="@string/wallet" />

        <RadioButton
            android:id="@+id/rb_tab_4"
            style="@style/SkMainTabStyle"
            android:drawableTop="@drawable/tab_my_normal_bg"
            android:text="@string/me" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/main_rg"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_tab_one_tv"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top|right"
                android:layout_marginRight="@dimen/indicator_margin"
                android:background="@drawable/tab_unread_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:visibility="invisible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible">

            <TextView
                android:id="@+id/main_tab_two_tv"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top|right"
                android:layout_marginRight="@dimen/indicator_margin"
                android:background="@drawable/tab_unread_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:visibility="invisible" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flNav1Point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/main_tab_nav1_tv"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top|right"
                android:layout_marginRight="@dimen/indicator_margin"
                android:background="@drawable/tab_unread_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:visibility="invisible" />

        </FrameLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/flNav2Point"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_tab_nav2_tv"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top|right"
                android:layout_marginRight="@dimen/indicator_margin"
                android:background="@drawable/tab_unread_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:visibility="invisible" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flFindPoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_tab_three_tv"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top|right"
                android:layout_marginRight="@dimen/indicator_margin"
                android:background="@drawable/tab_unread_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:visibility="invisible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_tab_four_tv"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top|right"
                android:layout_marginRight="@dimen/indicator_margin"
                android:background="@drawable/tab_unread_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:visibility="invisible" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/main_tab_five_tv"
                android:layout_width="@dimen/indicator_size"
                android:layout_height="@dimen/indicator_size"
                android:layout_gravity="top|right"
                android:layout_marginRight="@dimen/indicator_margin"
                android:background="@drawable/tab_unread_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:visibility="invisible" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>