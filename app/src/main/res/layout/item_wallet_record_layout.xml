<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/white_6dp">

    <ImageView
        android:id="@+id/item_more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:src="@mipmap/ic_more"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/item_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="5dp"
        android:text="2222"
        android:textColor="@color/text_black"
        app:layout_constraintBottom_toTopOf="@id/guide_line"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="2222"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@id/item_type_tv"
        app:layout_constraintTop_toBottomOf="@id/guide_line" />

    <TextView
        android:id="@+id/item_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:textColor="@color/text_black"
        android:text="2222"
        app:layout_constraintBottom_toBottomOf="@id/item_type_tv"
        app:layout_constraintEnd_toStartOf="@id/item_more_iv"
        app:layout_constraintTop_toTopOf="@id/item_type_tv" />

    <TextView
        android:id="@+id/item_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="2222"
        android:textColor="@color/wallet_type_fail"
        app:layout_constraintBottom_toBottomOf="@id/item_time_tv"
        app:layout_constraintEnd_toStartOf="@id/item_more_iv"
        app:layout_constraintTop_toTopOf="@id/item_time_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>