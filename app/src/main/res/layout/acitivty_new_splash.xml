<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_splash1"
    tools:context=".ui.notification.NotificationProxyActivity">

    <ImageView
        android:layout_width="138dp"
        android:adjustViewBounds="true"
        android:id="@+id/iv_1"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        android:src="@mipmap/ic_splash_logo"
        android:layout_height="138dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="64dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_splash_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/dp50"
        android:id="@+id/iv_2"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="150dp"
        app:layout_constraintBottom_toTopOf="@id/iv_2"
        android:layout_marginBottom="85dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_splash_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>